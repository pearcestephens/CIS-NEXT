# CIS V2 Configuration
APP_ENV=development
APP_DEBUG=true
APP_KEY=your-app-key-here
APP_URL=https://staff.vapeshed.co.nz
APP_VERSION=2.0.0-alpha.1

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=cis_development
DB_USER=cis_user
DB_PASS=your-db-password

# Dynamic Table Prefix - Change this to customize your table names
# Examples: 'cis_', 'ecigdis_', 'vapeshed_', 'live_', 'test_', etc.
DB_TABLE_PREFIX=cis_

# Security
CSRF_SECRET=your-csrf-secret-here
SESSION_SECRET=your-session-secret-here
SESSION_DRIVER=file
SESSION_LIFETIME=7200

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Performance & Profiling  
PROFILER_ENABLED=true
CACHE_DRIVER=file
LOG_LEVEL=debug
LOG_PATH=./var/logs

# Quality Gates
QUALITY_GATES_ENABLED=true
PSR12_COMPLIANCE_TARGET=95
TEST_COVERAGE_TARGET=70

# External Services
OPENAI_API_KEY=your-openai-key
MAILER_DSN=smtp://localhost:1025

# Observability
TELEMETRY_MODE=standard
SESSION_REPLAY_ENABLED=false
AUDIT_LOG_ENABLED=true

# Session Replay
SESSION_REPLAY_ENABLED=true
SESSION_REPLAY_CONSENT_REQUIRED=true

# Profiling
PROFILER_ENABLED=true
SLOW_QUERY_THRESHOLD=500
